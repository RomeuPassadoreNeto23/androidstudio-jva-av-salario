<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="EstiloBase">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>


    </style>
    <style name="text_view" parent="EstiloBase">
        <item name="android:background">@color/gray</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="text_fundo" parent="EstiloBase" >
        <item name="android:background">@drawable/fundo</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="edit_text" parent="EstiloBase">
        <item name="android:inputType">numberDecimal</item>
    </style>
    <style name="edit_text2" parent="EstiloBase">
        <item name="android:inputType">text</item>
    </style>
</resources>